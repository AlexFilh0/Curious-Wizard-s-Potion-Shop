<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="top|left"
        android:scaleType="centerCrop"
        android:src="@drawable/background_roxo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_rectangle"
        android:layout_width="319.81dp"
        android:layout_height="466.66dp"
        android:layout_gravity="top|left"
        android:background="@drawable/image_rectangle"
        android:rotation="-2"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/image_background"
        app:layout_constraintVertical_bias="0.635" />

    <TextView
        android:id="@+id/txt_welcome"
        android:layout_width="wrap_content"
        android:layout_height="25.67dp"
        android:layout_gravity="top|left"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/doublebass_regular_trial"
        android:gravity="left|center_vertical"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:rotation="-2"
        android:singleLine="true"
        android:text="Carregando..."
        android:textColor="#FF000000"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_name" />

    <ImageView
        android:id="@+id/image_name"
        android:layout_width="190.76dp"
        android:layout_height="82.05dp"
        android:layout_gravity="top|left"
        android:layout_marginTop="32dp"
        android:scaleType="centerInside"
        android:src="@drawable/image_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/image_rectangle" />

    <Button
        android:id="@+id/btn_ranking"
        android:layout_width="128dp"
        android:layout_height="39dp"
        android:backgroundTint="#D169E5"
        android:fontFamily="@font/doublebass_regular_trial"
        android:rotation="-2"
        android:text="RANKING"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/image_rectangle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_name"
        app:layout_constraintVertical_bias="0.35" />

    <Button
        android:id="@+id/btn_sair"
        android:layout_width="128dp"
        android:layout_height="39dp"
        android:backgroundTint="#D069E4"
        android:fontFamily="@font/doublebass_regular_trial"
        android:rotation="-2"
        android:text="SAIR"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/image_rectangle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_name" />

    <Button
        android:id="@+id/btn_voltar"
        android:layout_width="128dp"
        android:layout_height="39dp"
        android:backgroundTint="#CF69E3"
        android:fontFamily="@font/doublebass_regular_trial"
        android:rotation="-2"
        android:text="VOLTAR"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/image_rectangle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_name"
        app:layout_constraintVertical_bias="0.656" />

    <ImageButton
        android:id="@+id/btn_easteregg"
        android:layout_width="68dp"
        android:layout_height="93dp"
        android:backgroundTint="#00000000"
        android:onClick="abreEasterEgg"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="@+id/image_rectangle"
        app:layout_constraintEnd_toEndOf="@+id/image_rectangle"
        app:srcCompat="@drawable/ic_clicker" />

</androidx.constraintlayout.widget.ConstraintLayout>